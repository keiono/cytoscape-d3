			<artifactId>vizmap-impl</artifactId>
			<version>${cytoscape.api.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<scm>
		<connection>scm:git:git://github.com/keiono/cytoscape-d3.git</connection>
		<developerConnection>scm:git:git@github.com/keiono/cytoscape-d3.git</developerConnection>
		<url>https://github.com/keiono/cytoscape-d3.git</url>
	</scm>
</project>
